@model IEnumerable<LibraryManagementSystem.Models.AuthorModel>
<link href="@Url.Content("~/Content/bootstrap.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Scripts/bootstrap.js")" rel="stylesheet" type="text/css" />
<p>
    @Html.ActionLink("Create New Author", "CreateAuthor")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AuthorId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AuthorName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AuthorDesc)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AuthorId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AuthorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AuthorDesc)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditAuthor", new { id = @item.AuthorId }) |
                @Html.ActionLink("Delete", "DeleteAuthor", new { id = @item.AuthorId })
            </td>
        </tr>
    }

</table>
